---
import { Prism } from '@astrojs/prism';
---

<div id="root" />

<script>
        import { ctrl, Controller } from '@tsei/ctrl/src/index'
        import Noise from '../cases/Noise'
        import Wrap from '../cases/Wrap'
        import 'prismjs';

        const root = document.getElementById("root")!

        const _ = ctrl.create


        ctrl.render(
                _(
                        Controller,
                        {},
                        _(Wrap, { Demo: Noise })
                ),
                root
        )
</script>

<style>
        html,
        body {
                margin: 0;
                width: 100dvw;
                height: 100dvh;
        }
</style>